<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <% if @book.errors.count == 1 %>
  1 error prohibited this book from being saved:<br>
  <% else %>
  2 errors prohibited this book from being saved:<br>
  <% end %>

  <% @book.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  </div>
  <div class="action">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book) %>
<span>|</span>
<%= link_to 'Back', books_path %>